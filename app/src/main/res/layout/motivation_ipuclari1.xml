<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".motivation_ipuclari1"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView64"
            android:layout_width="366dp"
            android:layout_height="44dp"
            android:text="Ev Düzeni ve Dekorasyon Fikirleri"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.026" />

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ev Dekorasyon İpuçları:"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/secondTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView64"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/secondTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evinizi dekore ederken, odaklanmanız gereken anahtar noktalardan biri renk seçimidir. Duvarları boyarken veya mobilya seçerken, odanın büyüklüğüne ve ışık almasına dikkat edin. Aydınlatma da ev dekorasyonunun önemli bir parçasıdır; doğal ışık kullanarak odalarınızı daha ferah ve davetkar hale getirebilirsiniz. Ayrıca, dekorasyonunuza kişisel dokunuşlar eklemeyi unutmayın; fotoğraflar, sanat eserleri veya sevdiklerinizden aldığınız hatıralar evinize karakter katar."
            app:layout_constraintTop_toBottomOf="@id/textViewContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
        <TextView
            android:id="@+id/textViewCleanTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temizlik Tüyoları:"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/secondTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/secondTextViewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ev temizliği yaparken, odalarda bir plana sadık kalmak önemlidir. Odaları üstten alta doğru temizleyerek toz birikimini en aza indirebilirsiniz. Doğal temizlik malzemeleri kullanarak, kimyasal madde kullanımını azaltabilir ve evinizde daha sağlıklı bir ortam yaratabilirsiniz. Ayrıca, temizlik yaparken müzik dinlemek veya bir arkadaşınızla yardımlaşmak motivasyonunuzu artırabilir."
            app:layout_constraintTop_toBottomOf="@id/textViewCleanTips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/textViewMaintenanceTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ev Bakımı ve Onarım İpuçları:"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/secondTextViewContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/thirdTextViewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ev bakımı ve onarımları, evinizin değerini korumak ve uzun ömürlü olmasını sağlamak için önemlidir. Küçük sorunları hemen çözerek daha büyük problemlerin önüne geçebilirsiniz. Örneğin, sık sık muslukların sızdırmalarını kontrol edin ve zamanında tamir edin; bu, su hasarını önler ve faturalarınızı düşürür. Ayrıca, ev aletlerinizi düzenli olarak bakımını yaparak, onların ömrünü uzatabilirsiniz."
            app:layout_constraintTop_toBottomOf="@id/textViewMaintenanceTips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

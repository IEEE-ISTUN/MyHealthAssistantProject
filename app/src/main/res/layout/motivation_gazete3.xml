<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RÖPORTAJ SAYFASI"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />


    <ScrollView
        android:layout_width="412dp"
        android:layout_height="563dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView97"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DÖNÜŞÜMÜN GÜCÜ: OLIVIA'NIN YOLCULUĞU"
                android:textSize="18sp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giriş:"
                android:textSize="18sp"
                android:padding="8dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bugün, sizlere dönüşümün ve kendini aşmanın gücünü gösteren bir hikayeyi aktaracağımız özel bir röportajımız var. Olivia isimli genç bir kadın, hayatının zorluklarına meydan okuyarak dönüşümünü başaran bir isim. Kendisiyle gerçekleştireceğimiz bu röportajda, yaşadığı deneyimleri, karşılaştığı engelleri ve başarıya giden yolu konuşacağız."
                android:textSize="18sp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soru 1: Olivia, öncelikle kendinden biraz bahsedebilir misin? Adından, yaşından, yaşadığın yerden ve ailen hakkında kısaca bilgi verebilir misin?"
                android:textSize="18sp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Olivia: Tabii, ben Olivia. 30 yaşındayım ve New York'ta yaşıyorum. Burada ailemden ayrı bir apartmanda tek başıma yaşıyorum. Ailem, benim için her zaman büyük bir destek olmuştur, özellikle de zor zamanlarımda."
                android:textSize="18sp"
                android:padding="8dp"/>

            <!-- Diğer sorular ve cevapları buraya eklenebilir -->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

